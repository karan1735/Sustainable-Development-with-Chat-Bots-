<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display Rows</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<style>
    body {
        background-color: #ffffff; /* Set your desired background color here */
    }

    .center-card {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .table-container {
        width: 95%;
        height: 70%;
     /* Set the width of the table container */
    }

    /* Optional: Adjust the table styles */
    .table-responsive {
        overflow-x: auto; /* Enable horizontal scrolling for small screens */
    }
    .dashboard-brand {
    color: #ffffff; /* Set your desired color here */
}
</style>
<body>

    <div class="p-3 mb-2 bg-dark text-white">
        
    <nav class="navbar navbar-expand-lg navbar-light bg-green">
        <a class="navbar-brand dashboard-brand">Complaints Dashboard</a>
       
        <div class="tab-content" id="navbarNav">
          <ul class="nav nav-tabs " >
            <li class="nav-item" role="presentation">
              <a class="nav-link" href="/complaints">Complaints</a>
            </li>
            <li class="nav-item"  role="presentation">
              <a class="nav-link" href="/pending">Pending</a>
            </li>
            <li class="nav-item"  role="presentation">
              <a class="nav-link" href="/completed">Completed</a>
            </li>
            <li class="nav-item"  role="presentation">
              <a class="nav-link" href="/inappropriate">Inappropriate</a>
            </li>
          </ul>
        </div>
      </nav>
      <div class="center-card">
        <div class="table-container">
<div class="table-responsive">
    <!--<h1>Complaints</h1>-->
    <table class="table table-dark table-hover table align-middle table-bordered table align-middl">
        <thead>
            <tr class="align-bottom">
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Issue</th>
                <th>Image</th>
                <th>Description of the issue</th>
                <th>Area</th>
                <th>Date</th>
                <th>Time</th>
                <th>Status</th>
                <th>Platform</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            <% rows.forEach(function(row) { %>
                <tr>
                    <td><%= row.firstname %></td>
                    <td><%= row.lastname %></td>
                    <td><%= row.issue %></td>
                    <td>
                        <% if (row.Image) { %>
                            <img src="/uploads/<%= row.unique_id %>" alt="Image" style="max-width: 1000px; max-height: 1000px;">
                            <% } else { %>
                            <p>No image available</p>
                        <% } %>
                    </td>
                    <td><%= row.description_issue %></td>
                    <td><%= row.area %></td>
                    <td><%= row.date_of_complaint %></td>
                    <td><%= row.time_of_complaint %></td>
                    <td><%= row.status_issue %></td>
                    <td><%= row.platform %></td>
                    <td>
                        <button class="btn btn-outline-primary" onclick="completeIssue('<%= row.complaint_number %>')">Completed</button>
                        <button class="btn btn-outline-danger" onclick="markAsInappropriate('<%= row.complaint_number %>')">Inappropriate</button>
                        
                    </td>
<td>
    <button   class="btn btn-outline-warning" onclick="toggleAssignOptions(this)">Assign</button>
    <div class="assign-options" style="display: none;">
        <select>
            <option value="person1">Person 1</option>
            <option value="person2">Person 2</option>
            <option value="person3">Person 3</option>
        </select>
    </div>
</td>

                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    function completeIssue(complaintNumber) {
        $.ajax({
            type: "POST",
            url: "/markCompleted",
            data: { complaintNumber: complaintNumber },
            success: function(response) {
                alert("Issue marked as completed successfully");
            },
            error: function(xhr, status, error) {
                console.error("Error marking issue as completed:", error);
                alert("An error occurred while marking the issue as completed. Please try again later.");
            }
        });
    }

    function markAsInappropriate(complaintNumber) {
        $.ajax({
            type: "POST",
            url: "/markInappropriate",
            data: { complaintNumber: complaintNumber },
            success: function(response) {
                alert("Issue marked as inappropriate successfully");
            },
            error: function(xhr, status, error) {
                console.error("Error marking issue as inappropriate:", error);
                alert("An error occurred while marking the issue as inappropriate. Please try again later.");
            }
        });
    }
    function toggleAssignOptions(button) {
    var assignOptions = $(button).siblings(".assign-options");
    assignOptions.toggle();
}
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>


</div>

</body>


</html>
