<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display Rows</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Complaints Dashboard</a>
  <div  class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/complaints">Complaints</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/pending">Pending</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/completed">Completed</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/inappropriate">Inappropriate</a>
      </li>
    </ul>
  </div>
</nav>

<div class="table">
    <h1>Complaints</h1>
    <table class="table table-sucess table-hover">
        <!-- Table Header -->
        <thead>
            <tr class="align-bottom">
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Issue</th>
                <th>Image</th>
                <th>Description of the issue</th>
                <th>Area</th>
                <th>Date</th>
                <th>Time</th>
                <th>Status</th>
                <th>Platform</th>
                <th>Action</th>
            </tr>
        </thead>
        <!-- Table Body -->
        <tbody>
            <% rows.forEach(function(row) { %>
                <tr>
                    <td><%= row.firstname %></td>
                    <td><%= row.lastname %></td>
                    <td><%= row.issue %></td>
                    <td>
                        <% if (row.Image) { %>
                            <img src="data:image/jpg;base64,<%= row.Image.toString('base64') %>"  class="img-fluid" alt="Image">
                        <% } else { %>
                            <p>No image available</p>
                        <% } %>
                    </td>
                    <td><%= row.description_issue %></td>
                    <td><%= row.area %></td>
                    <td><%= row.date_of_complaint %></td>
                    <td><%= row.time_of_complaint %></td>
                    <td><%= row.status_issue %></td>
                    <td><%= row.platform %></td>
                    <td>
                        <button class="btn btn-outline-primary" onclick="completeIssue('<%= row.complaint_number %>')">Completed</button>
                        <button class="btn btn-outline-danger" onclick="markAsInappropriate('<%= row.complaint_number %>')">Inappropriate</button>
                        
                    </td>
                    <!-- Within the table body -->
<td>
    <button   class="btn btn-outline-warning" onclick="toggleAssignOptions(this)">Assign</button>
    <div class="assign-options" style="display: none;">
        <select>
            <option value="person1">Person 1</option>
            <option value="person2">Person 2</option>
            <option value="person3">Person 3</option>
            <!-- Add more options as needed -->
        </select>
    </div>
</td>

                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    function completeIssue(complaintNumber) {
        $.ajax({
            type: "POST",
            url: "/markCompleted",
            data: { complaintNumber: complaintNumber },
            success: function(response) {
                alert("Issue marked as completed successfully");
                // Optionally, you can reload the page or update the UI here
            },
            error: function(xhr, status, error) {
                console.error("Error marking issue as completed:", error);
                alert("An error occurred while marking the issue as completed. Please try again later.");
            }
        });
    }

    function markAsInappropriate(complaintNumber) {
        $.ajax({
            type: "POST",
            url: "/markInappropriate",
            data: { complaintNumber: complaintNumber },
            success: function(response) {
                alert("Issue marked as inappropriate successfully");
                // Optionally, you can reload the page or update the UI here
            },
            error: function(xhr, status, error) {
                console.error("Error marking issue as inappropriate:", error);
                alert("An error occurred while marking the issue as inappropriate. Please try again later.");
            }
        });
    }
    function toggleAssignOptions(button) {
    // Find the closest assign-options div relative to the clicked button
    var assignOptions = $(button).siblings(".assign-options");
    // Toggle the visibility of assign-options div
    assignOptions.toggle();
}

    // JavaScript functions for marking issues as completed or inappropriate (same as before)...
</script>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>


</body>


</html>
