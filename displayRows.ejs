<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display Rows</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Complaints Dashboard</a>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/complaints">Complaints</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/pending">Pending</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/completed">Completed</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/inappropriate">Inappropriate</a>
      </li>
    </ul>
  </div>
</nav>

<div class="container">
    <h1>Complaints</h1>
    <table class="table">
        <!-- Table Header -->
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Issue</th>
                <th>Image</th>
                <th>Description of the issue</th>
                <th>Area</th>
                <th>Date</th>
                <th>Time</th>
                <th>Status</th>
                <th>Platform</th>
                <th>Action</th>
            </tr>
        </thead>
        <!-- Table Body -->
        <tbody>
            <% rows.forEach(function(row) { %>
                <tr>
                    <td><%= row.firstname %></td>
                    <td><%= row.lastname %></td>
                    <td><%= row.issue %></td>
                    <td>
                        <% if (row.Image) { %>
                            <img src="data:image/jpg;base64,<%= row.Image.toString('base64') %>" alt="Image">
                        <% } else { %>
                            <p>No image available</p>
                        <% } %>
                    </td>
                    <td><%= row.description_issue %></td>
                    <td><%= row.area %></td>
                    <td><%= row.date_of_complaint %></td>
                    <td><%= row.time_of_complaint %></td>
                    <td><%= row.status_issue %></td>
                    <td><%= row.platform %></td>
                    <td>
                        <button onclick="completeIssue('<%= row.complaint_number %>')">Completed</button>
                        <button onclick="markAsInappropriate('<%= row.complaint_number %>')">Inappropriate</button>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    function completeIssue(complaintNumber) {
        $.ajax({
            type: "POST",
            url: "/markCompleted",
            data: { complaintNumber: complaintNumber },
            success: function(response) {
                alert("Issue marked as completed successfully");
                // Optionally, you can reload the page or update the UI here
            },
            error: function(xhr, status, error) {
                console.error("Error marking issue as completed:", error);
                alert("An error occurred while marking the issue as completed. Please try again later.");
            }
        });
    }

    function markAsInappropriate(complaintNumber) {
        $.ajax({
            type: "POST",
            url: "/markInappropriate",
            data: { complaintNumber: complaintNumber },
            success: function(response) {
                alert("Issue marked as inappropriate successfully");
                // Optionally, you can reload the page or update the UI here
            },
            error: function(xhr, status, error) {
                console.error("Error marking issue as inappropriate:", error);
                alert("An error occurred while marking the issue as inappropriate. Please try again later.");
            }
        });
    }

    // JavaScript functions for marking issues as completed or inappropriate (same as before)...
</script>

</body>
</html>
